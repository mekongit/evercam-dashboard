<style type="text/css">
  div.dialog {
    max-width: 35em;
    margin: 50px auto 0 auto;
    border: 1px solid #e5e5e5;
    border-radius: 4px;
    background-color: white;
    padding: 24px 40px 28px;
    box-shadow:0 3px 10px rgba(0,0,0,0.06);
  }

  h3 {
    font-size: 100%;
    color: #303030;
    line-height: 1.5em;
    font-weight: 700;
    font-size: 18px;
  }
  p {
    font-family: 'Lato', "Helvetica Neue", Helvetica, Arial, sans-serif;
    line-height: 1.5em;

  }
  .logo {
    margin: 50px auto 0px;
    width: 200px;
    display: block;
  }
  .logo img {
    width: 200px;
  }
  .footer {
    text-align: center;
  }
</style>
<div class="logo">
  <a href="//dash.evercam.io"><img src="//www.evercam.io/img/logo.png"></a>
</div>
<div class="dialog">
  <h3>Unsubscribe Snapmail</h3>
  <% if @message.present? %>
    <%= @message %>
  <% else %>
    <form method="post" action="<%= unsubscribed_snapmail_path(@id) %>?email=<%= @email %>">
      <%= hidden_field_tag :authenticity_token, form_authenticity_token -%>
      <p>Please confirm that you wish to unsubscribe '<strong><%= @email %></strong>'
      from receiving future emails from Scheduled Snapmail.<br>
      Note: If other email addresses are still subscribed to this Snapmail, they will continue to receive emails.</p>
      <p>
        <button class="btn btn-primary">Unsubscribe</button>
      </p>
    </form>
  <% end %>
</div>
<div class="footer">
  <p><a href="//dash.evercam.io" style="text-decoration: none;color:#aaaaaa;font-size:12px;">dash.evercam.io</a></p>
</div>
